<h1>New Schedule (Google Calendar Style)</h1>

<% form_for(@my_wombat) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :what %><br />
    <%= f.text_field :name %>
  </p>

	<p>
		<%=f.label :when %><br />
		<%=f.calendar_date_select :datetime_from %> to <%=f.calendar_date_select :datetime_to %>
	</p>
	
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', my_wombats_path %>
